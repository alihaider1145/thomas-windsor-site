---
layout: base.njk
---

<div class="painting-page">
    <h1 class="heading">{{ title }}</h1>
    <div class="painting-container">
        <div class="painting-img">
            <img 
            src="/.netlify/images?url={{ image }}&w=800&q=80" 
            alt="{{ title }}"
            loading="lazy"
            >
        </div>
        
        <div class="painting-info">            
            <div class="painting-details">
                <p class="price"><span>Price:</span> <span>${{ price }}</span></p>
                <p class="size"><span>Size:</span> <span class="highlighted-text">{{ size }}</span></p>
                <p class="medium"><span>Medium:</span> <span>{{ medium }}</span></p>
                <p class="availability {{ availability | lower }}"><span>Availability:</span> <span class="highlighted-text">{{ availability }}</span></p>
                <p class="description">
                    <span>Description:</span> <span>{{ description }}</span>
                </p>
            </div>
            
            <div class="painting-actions">
                {% if availability == "Available" %}
                    {% if stripeLink %}
                        {# Stripe Payment Link — buyer goes to Stripe checkout, gets auto-email #}
                        <a class="btn-primary" href="{{ stripeLink }}" target="_blank" rel="noopener noreferrer">
                            Buy Now
                        </a>
                    {% else %}
                        {# No Stripe link yet — artist hasn't set it up for this painting #}
                        <a class="btn-primary" href="/contact/">
                            Contact to Purchase
                        </a>
                    {% endif %}
                {% else %}
                    {# Painting is sold #}
                    <a class="btn-primary sold" disabled>
                        Sold
                    </a>
                {% endif %}
                
                {# Secondary action — always visible, for questions/commissions #}
                <a class="btn-secondary" href="/contact/">
                    Ask a Question
                </a>
            </div>
        </div>
    </div>
</div>