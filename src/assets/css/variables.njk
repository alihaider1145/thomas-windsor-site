---
permalink: /assets/css/variables.css
eleventyExcludeFromCollections: true
---
@font-face {
  font-family: 'FS Albert ExtraBold';
  src: url('../../assets/fonts/FSAlbert ExtraBold/FSAlbert ExtraBold.otf')
    format('opentype');
  font-weight: 800;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Mundo Sans Regular';
  src: url('../../assets/fonts/Mundo\ Sans\ Std\ Regular/Mundo Sans Std Regular.otf')
    format('opentype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

:root {
  /* Colors - auto-generated from site.js */
  --color-one: {{ site.colors.primary }};
  --color-two: {{ site.colors.accent }};
  --color-three: {{ site.colors.dark }};
  --color-white: {{ site.colors.light }};
  --subtle-shadow: {{ site.colors.subtleShadow }};
  
  /* Fonts - auto-generated from site.js */
  --font-one: {{ site.fonts.emphasis }};
  --font-two: {{ site.fonts.body }};
  --font-three: {{ site.fonts.heading }};
}